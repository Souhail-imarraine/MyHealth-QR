{
  "name": "myhealth-qr-backend",
  "version": "1.0.0",
  "description": "Backend API pour MyHealth QR - Système de dossier médical sécurisé",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_ENV=test mocha test/**/*.test.js --timeout 10000 --exit",
    "test:watch": "NODE_ENV=test mocha test/**/*.test.js --timeout 10000 --watch",
    "test:coverage": "NODE_ENV=test nyc mocha test/**/*.test.js --timeout 10000 --exit",
    "coverage:report": "nyc report --reporter=html --reporter=text"
  },
  "keywords": [
    "health",
    "medical",
    "qr-code",
    "nodejs",
    "express"
  ],
  "author": "MyHealth Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "qrcode": "^1.5.3",
    "sequelize": "^6.35.2",
    "socket.io": "^4.6.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "supertest": "^6.3.3"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/server.js",
      "test/**/*.js",
      "**/*.test.js"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "report-dir": "coverage",
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "branches": 80,
    "statements": 80
  }
}
